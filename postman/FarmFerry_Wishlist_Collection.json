{
  "info": {
    "name": "FarmFerry API - Wishlist",
    "description": "API collection for testing FarmFerry wishlist endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Wishlist",
      "description": "Wishlist management endpoints",
      "item": [
        {
          "name": "Get Wishlist",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{customerToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/wishlist",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "wishlist"]
            },
            "description": "Get the wishlist for the logged in customer"
          },
          "response": []
        },
        {
          "name": "Add Product to Wishlist",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{customerToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"productId\": \"{{productId}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/wishlist",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "wishlist"]
            },
            "description": "Add a product to the wishlist (customer only)"
          },
          "response": []
        },
        {
          "name": "Remove Product from Wishlist",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{customerToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/wishlist/:productId",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "wishlist", ":productId"],
              "variable": [
                {
                  "key": "productId",
                  "value": "{{productId}}",
                  "description": "ID of the product to remove from wishlist"
                }
              ]
            },
            "description": "Remove a product from the wishlist (customer only)"
          },
          "response": []
        },
        {
          "name": "Clear Wishlist",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{customerToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/wishlist",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "wishlist"]
            },
            "description": "Clear all products from the wishlist (customer only)"
          },
          "response": []
        },
        {
          "name": "Check if Product is in Wishlist",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{customerToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/wishlist/check/:productId",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "wishlist", "check", ":productId"],
              "variable": [
                {
                  "key": "productId",
                  "value": "{{productId}}",
                  "description": "ID of the product to check in wishlist"
                }
              ]
            },
            "description": "Check if a product is in the wishlist (customer only)"
          },
          "response": []
        },
        {
          "name": "Move Product to Cart",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{customerToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"productId\": \"{{productId}}\",\n    \"quantity\": 1\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/wishlist/move-to-cart",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "wishlist", "move-to-cart"]
            },
            "description": "Move a product from wishlist to cart (customer only)"
          },
          "response": []
        },
        {
          "name": "Get Wishlist Count",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{customerToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/wishlist/count",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "wishlist", "count"]
            },
            "description": "Get the number of products in the wishlist (customer only)"
          },
          "response": []
        }
      ]
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [""]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [""]
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000",
      "type": "string"
    }
  ]
}
